import pandas as pd
import os

# ====================================================
# üì• DESCARGA DE DATOS 
# ====================================================
directorio = '../DATA'
nombre_fichero = 'export_es_2015_formatted.csv'
ruta_completa = os.path.join(directorio, nombre_fichero)
print("\n======================== üîç df  ==========================")
df = pd.read_csv(ruta_completa)
print('Fichero:', ruta_completa, 'importado')
print(f"Caracter√≠sticas del Fichero Base: {df.shape}")
# ====================================================

# Asegurar formato datetime y establecer como √≠ndice
df['Date'] = pd.to_datetime(df['Date'], utc=True)
df.set_index('Date', inplace=True)

# üìä Agregaci√≥n a 5 minutos con alineaci√≥n exacta UTC
agg_dict = {
    'Open': 'first',
    'High': 'max',
    'Low': 'min',
    'Close': 'last'
}

# Si hay columna Volume, incluirla
if 'Volume' in df.columns:
    agg_dict['Volume'] = 'sum'
elif 'Volumen' in df.columns:
    agg_dict['Volumen'] = 'sum'  # si tienes el nombre en espa√±ol

# Resample alineado a las horas UTC exactas (ej: 15:30‚Äì15:35)
df_5min = df.resample('5min', label='right', closed='right').agg(agg_dict)

# Eliminar filas incompletas
df_5min.dropna(inplace=True)

print(f"‚úÖ DataFrame re-muestreado a 5 minutos: {df_5min.shape}")
print(df_5min.head())

# Guardar el resultado como CSV
output_path = os.path.join('../DATA', 'ES_2015_2024_5min_timeframe.csv')
df_5min.to_csv(output_path)

print(f"‚úÖ Archivo guardado correctamente en: {output_path}")
